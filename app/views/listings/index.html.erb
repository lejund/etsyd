
<div class="jumbotron">
  <h1> Girls Girls Girls HOT GIRLS</h1>
  <h2> Discover hot girls</h2>
</div>

<div class="row">
  <% @listings.each do |listing| %>
     <div class="col-md-3">
         <div class="thumbnail">
          <%= link_to image_tag(listing.image.url), listing %>
          <div class="caption">
            <h3><%= listing.name %></h3>
            <p><%= number_to_currency(listing.price) %></p>
            <p><%=  "Sold by #{listing.user.name}" %></p>
            <p><%= listing.desciption %></p>
          </div>
      </div> 
     </div> 
  <% end %>
</div>

<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-link"%>
<% end %>